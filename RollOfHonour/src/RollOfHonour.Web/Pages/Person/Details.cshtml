@page
@model RollOfHonour.Web.Pages.Person.Details

@{

}

<div class="columns">
    <div class="card column is-two-fifths">
        <div class="card-image">
            <figure class="image is-4by3">
                <img src="../images/portraitPlaceholder.jpg" alt="Placeholder image">
            </figure>
        </div>
        <div class="card-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4">@Model.Person.Name</p>
                </div>
            </div>
            <div class="content">
                @Model.Person.FamilyHistory
            </div>
        </div>
    </div>
    <div class="column is-one-fifth"></div>
    <div class="card column is-two-fifths">
        <header class="card-header">
            <p class="card-header-title">
                Military History
            </p>
        </header>
        <div class="card-content">
            <div class="content">
                @Model.Person.MilitaryHistory
            </div>
        </div>
        <header class="card-header">
            <p class="card-header-title">
                Personal Information
            </p>
        </header>
        <div class="card-content">
            <div class="content">
                @Model.Person.AddressAtEnlistment
            </div>
            <div class="content">
                @Model.Person.EmploymentHobbies
            </div>
            <div class="content">
                @Model.Person.DateOfBirth?.ToString("D")
            </div>
            <div class="content">
                @Model.Person.DateOfDeath?.ToString("D")
            </div>
            <div class="content">
                @Model.Person.AgeAtDeath
            </div>
        </div>
        <footer class="card-footer">
            <a href="https://www.cwgc.org/find-records/find-war-dead/casualty-details/@Model.Person.Cwgc" target="_blank" class="card-footer-item">CWGC</a>
            <a href="#" class="card-footer-item">Delete</a>
        </footer>
    </div>
</div>