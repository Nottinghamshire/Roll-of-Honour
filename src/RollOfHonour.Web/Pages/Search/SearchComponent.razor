@code {
    private string searchTerm = "";
    private War _selectedWar = War.WW1;
    private QueryType _selectedQueryType = QueryType.Person;

    private void SearchRollOfHonour()
    {
        navManager.NavigateTo($"/Results?s={searchTerm}&w={(int)_selectedWar}&qt={(int)_selectedQueryType}");
    }
}
